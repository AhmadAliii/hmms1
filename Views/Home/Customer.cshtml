					</ul>
					<a href="@Url.Action("HomePage", "Home")" class="login_btn">Logout</a>

    <fieldset>
        <legend>
            Signup</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.First_Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.First_Name)
            @Html.ValidationMessageFor(model => model.First_Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Last_Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Last_Name)
            @Html.ValidationMessageFor(model => model.Last_Name)
        </div>

        <div class="editor-label">
           UserName: <input type="text" name="UserName" id="user" placeholder="username.." value="" />
            <input type="button" id="b2" value="Check" />
            
           </div>
         <br />
        <div class="editor-field">
            
            @Html.ValidationMessageFor(model => model.UserName )
        </div>
 
            <script>


                $(document).ready(function () {



                    $('#b2').click(function () {

                        var userName = $('#user').val();

                        //alert('User Name ='+ userName);
                        //$('#checking').show();
                        $.getJSON('/Home/CheckUserName?us=' + userName, function (data) {

                            if (data == true)
                            {
                                alert("USerName is available in database.. use any other username");

                            }
                            else
                            {
                                alert("USerName is not available in database.. you can use it");
                            }
                        });

                    });

                });
    </script>
            
            
            
      
       
        <div class="editor-label">
           Password: <input type="password" id ="pwd" name ="Password" placeholder="Password here..." />
        </div>
        <div class="editor-field">
           
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>

         <label class="email-label2">
                    <i class="fa fa-male"></i>
                    @Html.DropDownList("Gender", new List<SelectListItem>{
                    new SelectListItem{Text="Male" , Value="Male",},
                    new SelectListItem{Text="Female" , Value="Female"}
                    }, "Gender", new { @class= "style"})
                    
               </label>
        <div class="editor-field">
            
            @Html.ValidationMessageFor(model => model.Gender)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Country )
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Country)
            @Html.ValidationMessageFor(model => model.Country)
        </div>

        <p>
            <input type="submit" value="Register" />
        </p>
