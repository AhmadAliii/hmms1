@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <section class="hero">
		<header>
			<div class="wrapper">
				
				<a href="#" class="hamburger"></a>
				<nav>
					<ul>
						<li><a href="#">Home</a></li>
						<li><a href="#">Gallery</a></li>
						<li><a href="#">Booking & Reservation</a></li>
						<li><a href="#">About</a></li>
