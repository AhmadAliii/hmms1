@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
 <script>


     $(document).ready(function () {



         $('#b2').click(function () {

             var rent = $('#rent').val();

             $.getJSON('/Admin/GetDetails?us=' + rent, function (x) {

                 if (x) {
                     alert("found");
                     for (i = 0; i < x.size; i++) {

                         $('t1').append('<tr><td>' + x[i].Room_No + '</td><td>' + x[i].Category + '</td><td>' + x[i].Rent + '</td><td>' + x[i].Status + '</td><tr>');
                     }


                 }
                 else {
                     alert("No rooms available in PC Hotel");
                 }
             });

         });

     });
    </script>

